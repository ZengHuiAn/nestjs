{
    "editor.formatOnSave": true,
    "editor.rulers": [120],
    "files.exclude": {
        "**/*.meta": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "library/": true,
        "local/": true,
        "temp/": true
    },
    "search.exclude": {
        "**/bower_components": true,
        "**/node_modules": true,
        "build/": true,
        "library/": true,
        "temp/": true
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.tslint": true
    },
    "window.title": "${activeEditorMedium}${separator}${rootName}"
}